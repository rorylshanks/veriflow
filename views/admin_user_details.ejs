<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('includes/admin_head'); %>
</head>
<body>

<div class="sidebar">
  <div class="logo">
    <%- include('includes/logo'); %>
  </div>
  
  <a href="<%= redirectBasePath %>/admin/sessions">Sessions</a>
  <a href="<%= redirectBasePath %>/admin/users">Users</a>
</div>

<div class="content">
  <div class="card">
    <h5>User Details - <%= user.id %></h5>
    <hr>
    <table id="data">
      <thead>
        <tr>
          <td>Key</td>
          <td>Value</td>
        </tr>
      </thead>
      <tbody>
        <% for (const d of Object.keys(user)) { %>
          <tr>
            <td><%= d %></td>
            <td><%= user[d] %></td>
          </tr>
        <% } %>

        <!-- Add more rows as needed -->
      </tbody>
    </table>
  </div>
  <div class="card">
    <h5>User Groups</h5>
    <hr>
    <table id="groups">
      <thead>
        <tr>
          <td>Group Name</td>
        </tr>
      </thead>
      <tbody>
        <% for (const d of userGroups) { %>
          <tr>
            <td><%= d %></td>
          </tr>
        <% } %>

        <!-- Add more rows as needed -->
      </tbody>
    </table>
  </div>
</div>

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.datatables.net/2.0.2/js/dataTables.min.js"></script>
<script>
  let table = new DataTable('#data');
  let groupsTable = new DataTable('#groups');
</script>
</html>
