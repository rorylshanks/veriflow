<style>
        body {
            font-family: Verdana, sans-serif;
            color: #111111;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #607da6;
            <% if(background_image_url){ %>
            background-image: url(<%= background_image_url %>);
            background-repeat: no-repeat;
            background-size: cover;
            <% } %>
        }

        .container {
            text-align: center;
            max-width: 400px;
            background-color: #fff;
            padding: 40px;
            margin: 10px;
            box-shadow: 0 0 16px rgba(17, 17, 17, 0.2);
            border-radius: 4px;
        }

        .content {
            padding: 1.5em 0;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .menu {
            position: relative;
        }

        .hamburger-menu {
            font-size: 1.5em;
            cursor: pointer;
        }

        .menu-content {
            text-align: left;
            display: none;
            right: 0;
            position: absolute;
            border: 1px solid #ddd;
            background-color: #ffffff;
            border-radius: 4px;
            padding: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .menu-content a {
            display: block;
            padding: 10px;
            color: #333;
            text-decoration: none;
            white-space: nowrap;
        }

        .menu-content a:hover {
            background-color: #f5f5f5;
        }

        .logo {
            font-weight: bold;
            text-align: left;
        }

        .logo img {
            max-width: 180px;
            max-height: 35px;
        }

        .hamburger-menu {
            font-size: 1.5em;
            cursor: pointer;
        }

        .error-message {
            font-weight: 300;
            margin: 20px 0;
        }

        .footer {
            color: #777;
            font-size: 0.9em;
        }

        h1 {
            font-size: 2.5em;
            text-shadow: 0 0 1px rgba(17, 17, 17, .5);
            margin: 20px 0;
        }
        footer {
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
            margin-bottom: 5px;
            color: rgba(255, 255, 255, 0.5);
        }
</style>

<style>
        <% if(additional_css){ %>
            <%- additional_css %>
        <% } %>
</style>